<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.GioHangActivity"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_giohang"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Giỏ Hàng"
        app:titleTextColor="@color/white"
        android:background="#4AEFDF"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="8"
            android:layout_margin="5sp">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/giohang_sanpham_null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="100sp"
                        android:layout_height="100sp"
                        android:src="@drawable/cart_null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giỏ hàng của bạn đang trống!"
                        android:textColor="#22A2DC"
                        android:textSize="24sp"
                        android:layout_marginTop="10sp"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/listview_giohang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#7BCDF3"
                    android:dividerHeight="2sp"
                    android:listSelector="#CBEBFA"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:background="#FAF8F8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Tổng Tiền: "
                        android:textSize="20sp"
                        android:textColor="#1CAFF1"
                        android:textStyle="bold"
                        android:gravity="left|center"
                        android:paddingLeft="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <TextView
                        android:id="@+id/tv_tong_gia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Giá trị"
                        android:textSize="20sp"
                        android:textColor="#F11C5F"
                        android:gravity="left|center"
                        android:paddingLeft="8sp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FAF8F8">
            <Button
                android:id="@+id/bt_muangay_giohang"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:text="MUA NGAY"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#59E1F3"
                android:layout_marginRight="50sp"
                android:layout_marginBottom="10sp"/>
            <Button
                android:id="@+id/bt_themmoi_giohang"
                android:layout_width="wrap_content"
                android:layout_height="60sp"
                android:text="THÊM MỚI"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#59E1F3"
                android:layout_marginBottom="10sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>