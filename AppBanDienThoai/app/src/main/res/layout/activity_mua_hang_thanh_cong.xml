<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MuaHangThanhCongActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_muahangthanhcong">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/thanhcong_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Mua Hàng Thành Công"
        app:titleTextColor="@color/white"
        android:background="#F4B353"/>
    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:src="@drawable/muahangthanhcong"
        android:layout_gravity="center"
        android:layout_marginTop="150sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chúc Mừng"
            android:textStyle="bold"
            android:textColor="#ED3A77"
            android:textSize="30sp"
            android:gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn đã mua hàng thành công !"
            android:textSize="24sp"
            android:textColor="#37A9DD"
            android:textStyle="bold"
            android:gravity="center"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/thanhcong_button"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:text="Trở Về"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:background="@drawable/spiner_color"
        android:layout_marginTop="15sp"/>

</LinearLayout>