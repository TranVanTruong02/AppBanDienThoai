<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/thongtintaikhoan1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="300sp"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:background="@drawable/button_border_search"
            android:layout_marginTop="30sp"
            android:gravity="center">
            <EditText
                android:id="@+id/timkiem_edit"
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:hint="Bạn muốn tìm gì?"
                android:textSize="16sp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:paddingLeft="10sp"
                android:ems="10" />
            <ImageView
                android:id="@+id/timkiem_search"
                android:layout_width="25sp"
                android:layout_height="25sp"
                android:src="@drawable/search"
                android:layout_marginLeft="5sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/timkiem_null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingTop="100sp">
                    <ImageView
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:src="@drawable/cart_null"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Không có sản phầm nào!"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_marginTop="10sp"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:padding="8sp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>