<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThongTinMuaHangActivity"
    android:orientation="vertical"
    android:background="@drawable/thongtin">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/muahang_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Thông Tin Mua Hàng"
        app:titleTextColor="@color/white"
        android:background="#5CBFEC"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:src="@drawable/thongtinmuahang"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thông Tin Mua Hàng"
                android:textSize="30sp"
                android:textColor="#0EA3E7"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="300sp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5sp"
                android:layout_gravity="center">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/muahang_text_tenkhachhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_users"
                    app:hintTextColor="#0EA3E7"
                    app:startIconTint="#0EA3E7"
                    android:hint="Tên Khách Hàng"
                    android:autofillHints="20sp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="#0EA3E7"
                    app:counterMaxLength="20"
                    app:counterEnabled="true"
                    app:counterTextColor="@color/purple_500">>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/muahang_input_tenkhachhang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#0EA3E7"
                        android:ems="10"
                        android:background="@drawable/input_border_color"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/muahang_text_sdt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_phone"
                    app:startIconTint="#0EA3E7"
                    android:hint="Số Điện Thoại"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="#0EA3E7"
                    app:hintTextColor="#0EA3E7"
                    app:counterMaxLength="10"
                    app:counterEnabled="true"
                    app:counterTextColor="@color/purple_500">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/muahang_input_sdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_border_color"
                        android:ems="10"
                        android:inputType="phone"
                        android:textColor="#0EA3E7"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/muahang_text_diachi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_baseline_add_location_alt_24"
                    app:startIconTint="#0EA3E7"
                    android:hint="Đại Chỉ Nhận Hàng"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="#0EA3E7"
                    app:hintTextColor="#0EA3E7"
                    app:counterMaxLength="50"
                    app:counterEnabled="true"
                    app:counterTextColor="@color/purple_500">>
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/muahang_input_diachi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_border_color"
                        android:ems="10"
                        android:textColor="#0EA3E7"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/muahang_text_thanhtoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/ic_pay"
                    app:startIconTint="#0EA3E7"
                    android:hint="Phương Thức Thanh Toán"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:textColorHint="#0EA3E7"
                    app:hintTextColor="#0EA3E7"
                    app:counterMaxLength="20"
                    app:counterEnabled="true"
                    app:counterTextColor="@color/purple_500">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/muahang_input_thanhtoan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_border_color"
                        android:ems="10"
                        android:textColor="#0EA3E7"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/muahang_button_xacnhan"
                    android:layout_width="140sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:text="Xác Nhận"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/button_border_color"
                    android:layout_marginRight="20sp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/muahang_button_huy"
                    android:layout_width="140sp"
                    android:layout_height="50sp"
                    android:layout_gravity="center"
                    android:text="HUỶ"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/button_border_color"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bạn đã sẵn sàng hoàn tất việc mua hàng?"
                android:textSize="16sp"
                android:textColor="#0EA3E7"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>