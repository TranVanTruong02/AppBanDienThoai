<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.NoInternetActivity"
    android:orientation="vertical"
    android:background="@drawable/ic_no_internet"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:src="@drawable/no_wifi"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn vui lòng"
            android:textColor="#08A6ED"
            android:textSize="26sp"
            android:gravity="center"
            android:layout_marginTop="15sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kiểm tra lại kết nối Internet!"
            android:textColor="#E91E63"
            android:textSize="22sp"
            android:gravity="center"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_thulai"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="Thử Lại"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_gravity="center"
        android:background="@drawable/spiner_color"
        android:layout_marginTop="20sp"/>

</LinearLayout>